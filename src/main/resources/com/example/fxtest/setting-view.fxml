<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fxtest.SettingController" style="-fx-background-color: black;">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <Button fx:id="resizeGameButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="게임 화면 크기 조절"/>
            <Button fx:id="setKeyButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="게임 조작키 설정"/>
            <Button fx:id="resetScoreButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="스코어 보드 초기화"/>
            <Button fx:id="toggleColorBlindModeButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="색맹 모드 전환"/>
            <Button fx:id="resetSettingsButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="설정 초기화"/>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <Button fx:id="backButton" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-width: 0;" text="뒤로"/>
        </HBox>
    </bottom>
</BorderPane>
